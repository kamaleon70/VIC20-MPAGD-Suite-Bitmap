00008Br 3               
00008Br 3               	clc 			; point there.
00008Br 3               	lda z80_l
00008Br 3               	adc #SHRSIZ		; distance to next.
00008Br 3               	sta z80_l
00008Br 3               	bcc :+
00008Br 3               	inc z80_h
