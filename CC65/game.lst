00008Cr 3               lcol1:
00008Cr 3               	ldy #3
00008Cr 3               	lda (z80_hl),y		; get y.
00008Cr 3               	sec
00008Cr 3               	ldy #8
00008Cr 3               	sbc (z80_ix),y		; subtract sprite y.
00008Cr 3               lcolh:
