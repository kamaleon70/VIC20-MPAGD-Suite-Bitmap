000FF5r 3               	lda txtpos 		; get text pointer.
000FF5r 3               	sta scr_txt
000FF5r 3               	lda txtpos+1
000FF5r 3               	sta scr_txt+1
000FF5r 3               
000FF5r 3               	ldy #0
