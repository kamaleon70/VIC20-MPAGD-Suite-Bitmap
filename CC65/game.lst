00008Br 3               lcol3:
00008Br 3               	clc			; point to more shrapnel.
00008Br 3               	lda z80_l
00008Br 3               	adc #SHRSIZ
00008Br 3               	sta z80_l
00008Br 3               	bcc :+
00008Br 3               	inc z80_h
