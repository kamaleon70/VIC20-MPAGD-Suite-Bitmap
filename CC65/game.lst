000081r 3               inish0:
000081r 3               	lda #255 		; kill the shrapnel.
000081r 3               	sta (z80_hl),y
000081r 3               
000081r 3               	clc 			; point there.
000081r 3               	lda z80_l
000081r 3               	adc #SHRSIZ		; distance to next.
000081r 3               	sta z80_l
000081r 3               	bcc :+
000081r 3               	inc z80_h
000081r 3               :
000081r 3               	dex
000081r 3               	bne inish0 		; round again.
000081r 3               	rts
