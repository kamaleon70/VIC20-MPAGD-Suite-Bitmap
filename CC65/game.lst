00008Br 3               lcol:
00008Br 3               	lda #<SHRAPN		; shrapnel table.
00008Br 3               	sta z80_l
00008Br 3               	lda #>SHRAPN
00008Br 3               	sta z80_h
00008Br 3               
00008Br 3               	lda #NUMSHR		; number of pieces in table.
00008Br 3               	sta z80_b
