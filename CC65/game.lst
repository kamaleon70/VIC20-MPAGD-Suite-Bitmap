000FF5r 3               
000FF5r 3               	lda z80_c		; width.
000FF5r 3               	sta txtwid		; set width in working storage.
000FF5r 3               
000FF5r 3               	lda #128 		; start with leftmost bit.
000FF5r 3               	sta txtbit
