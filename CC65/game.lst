000099r 3               inish0:
000099r 3               	lda #255 		; kill the shrapnel.
000099r 3               	sta (z80_hl),y
000099r 3               
000099r 3               	clc 			; point there.
000099r 3               	lda z80_l
000099r 3               	adc #SHRSIZ		; distance to next.
000099r 3               	sta z80_l
000099r 3               	bcc :+
000099r 3               	inc z80_h
000099r 3               :
000099r 3               	dex
000099r 3               	bne inish0 		; round again.
000099r 3               	rts
