00008Br 3               	clc
00008Br 3               	adc z80_c		; add cosine lb
00008Br 3               	sta (z80_ix),y		; store new coordinate lb.
00008Br 3               	ldy #5
00008Br 3               	lda (z80_ix),y
00008Br 3               	adc z80_b		; add cosine lb
00008Br 3               	sta (z80_ix),y		; store new coordinate hb.
00008Br 3               
00008Br 3               	rts
00008Br 3               
00008Br 3               ;----------------------------------------------------
