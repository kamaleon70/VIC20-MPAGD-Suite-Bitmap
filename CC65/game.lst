00008Br 3               chkxy:
00008Br 3               
00008Br 3               ; top:    Y>T		Y=T	Ok
00008Br 3               
00008Br 3               	ldy #3
00008Br 3               	lda (z80_ix),y	 	; fetch shrapnel coordinate.
00008Br 3               	cmp wntopx		; window top.
